#include<stdio.h>
#include<math.h>
int main()
{
	int x, a, b, i, j;
	char ch;
	scanf("%d %c", &x, &ch);
	a = sqrt((x + 1)/2);
	b = x - (2*a*a - 1);
	for(i = a; i > 0; i--)
	{
		for(j = 1; j <= (a - i); j++)
			putchar(' ');
		for(j = 1;j <= (2*i - 1); j++)
			putchar(ch);
		putchar('\n');
	}
	for(i = 2; i <= a; i++)
	{
		for(j = 1; j <= (a - i); j++)
			putchar(' ');
		for(j = 1; j <= (2*i - 1); j++)
			putchar(ch); 
		putchar('\n'); 
	}
	printf("%d",b);
	return 0;
}
